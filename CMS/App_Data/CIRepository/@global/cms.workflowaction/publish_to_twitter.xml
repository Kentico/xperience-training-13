<?xml version="1.0" encoding="utf-8"?>
<cms.workflowaction>
  <ActionAllowedObjects>;##DOCUMENTS##;</ActionAllowedObjects>
  <ActionAssemblyName>CMS.SocialMarketing</ActionAssemblyName>
  <ActionClass>CMS.SocialMarketing.TwitterAction</ActionClass>
  <ActionDescription>
    <![CDATA[Using this step, you can automatically publish tweets using the Twitter account specified in the site's settings.]]>
  </ActionDescription>
  <ActionDisplayName>Publish to Twitter</ActionDisplayName>
  <ActionEnabled>True</ActionEnabled>
  <ActionGUID>89787876-a15f-4948-afaf-2b22258e0bd8</ActionGUID>
  <ActionIconClass> icon-brand-twitter </ActionIconClass>
  <ActionName>Publish_to_Twitter</ActionName>
  <ActionParameters>
    <form version="2">
      <field column="Text" columntype="longtext" guid="a084c23a-c099-43b8-ad13-4da78b2db325" visible="true">
        <properties>
          <explanationtext>{$sm.twitter.autopost.macrohint$}</explanationtext>
          <fieldcaption>{$general.text$}</fieldcaption>
          <fielddescription>{$wf.action.twitter.text.desc$}</fielddescription>
        </properties>
        <settings>
          <controlname>smtwitterposttextarea</controlname>
        </settings>
      </field>
      <field allowempty="true" column="URLShortenerType" columntype="integer" guid="a5fdfdb2-c5ce-4dec-81f2-2e69ff27a382" visible="true">
        <properties>
          <fieldcaption>{$sm.twitter.posts.urlshortener$}</fieldcaption>
          <fielddescription>{$sm.twitter.posts.urlshortener.description$}</fielddescription>
        </properties>
        <settings>
          <controlname>availableurlshortenerselector</controlname>
          <SocialNetworkName>Twitter</SocialNetworkName>
        </settings>
      </field>
      <field allowempty="true" column="PostOnlyOnce" columntype="boolean" guid="eb46e7b5-8859-4bfe-8dc6-7294b0fb102d" visible="true">
        <properties>
          <defaultvalue>true</defaultvalue>
          <fieldcaption>{$sm.workflow.postonlyonce$}</fieldcaption>
          <fielddescription>{$sm.workflow.postonlyonce.decription$}</fielddescription>
        </properties>
        <settings>
          <controlname>CheckBoxControl</controlname>
        </settings>
      </field>
    </form>
  </ActionParameters>
  <ActionResourceID>
    <CodeName>CMS.SocialMarketing</CodeName>
    <GUID>66fed7e0-3dfc-4367-9350-0ce620cc1d7e</GUID>
    <ObjectType>cms.resource</ObjectType>
  </ActionResourceID>
  <ActionThumbnailClass> icon-brand-twitter </ActionThumbnailClass>
  <ActionWorkflowType>1</ActionWorkflowType>
</cms.workflowaction>