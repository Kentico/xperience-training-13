<?xml version="1.0" encoding="utf-8"?>
<cms.workflowaction>
  <ActionAssemblyName>CMS.SocialMarketing</ActionAssemblyName>
  <ActionClass>CMS.SocialMarketing.LinkedInAction</ActionClass>
  <ActionDescription>
    <![CDATA[Using this step, you can automatically publish shares to the default LinkedIn company profile specified in LinkedIn app.]]>
  </ActionDescription>
  <ActionDisplayName>Publish to LinkedIn</ActionDisplayName>
  <ActionEnabled>True</ActionEnabled>
  <ActionGUID>bc702cf4-2acb-4d7c-913c-08c0fc3cb838</ActionGUID>
  <ActionIconClass> icon-brand-linkedin</ActionIconClass>
  <ActionName>PublishToLinkedIn</ActionName>
  <ActionParameters>
    <form version="2">
      <field column="Text" columntype="longtext" guid="69804333-fa38-49ee-8eec-8f4665c336c6" visible="true">
        <properties>
          <explanationtext>{$sm.linkedin.autopost.macrohint$}</explanationtext>
          <fieldcaption>{$general.text$}</fieldcaption>
          <fielddescription>{$wf.action.linkedin.text.desc$}</fielddescription>
        </properties>
        <settings>
          <controlname>LargeTextArea</controlname>
        </settings>
      </field>
      <field allowempty="true" column="URLShortenerType" columntype="integer" guid="a0de834a-91a4-445c-873f-b4c93934faec" visible="true">
        <properties>
          <fieldcaption>{$sm.linkedin.posts.urlshortener$}</fieldcaption>
          <fielddescription>{$sm.linkedin.posts.urlshortener.description$}</fielddescription>
        </properties>
        <settings>
          <controlname>AvailableURLShortenerSelector</controlname>
          <SocialNetworkName>LinkedIn</SocialNetworkName>
        </settings>
      </field>
      <field allowempty="true" column="PostOnlyOnce" columntype="boolean" guid="70734d34-cebe-4e81-b3f3-911be6b795d2" visible="true">
        <properties>
          <defaultvalue>true</defaultvalue>
          <fieldcaption>{$sm.workflow.postonlyonce$}</fieldcaption>
          <fielddescription>{$sm.workflow.postonlyonce.decription$}</fielddescription>
        </properties>
        <settings>
          <controlname>CheckBoxControl</controlname>
        </settings>
      </field>
    </form>
  </ActionParameters>
  <ActionResourceID>
    <CodeName>CMS.SocialMarketing</CodeName>
    <GUID>66fed7e0-3dfc-4367-9350-0ce620cc1d7e</GUID>
    <ObjectType>cms.resource</ObjectType>
  </ActionResourceID>
  <ActionThumbnailClass> icon-brand-linkedin</ActionThumbnailClass>
  <ActionWorkflowType>1</ActionWorkflowType>
</cms.workflowaction>