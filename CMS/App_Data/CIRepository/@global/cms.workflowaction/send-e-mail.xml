<?xml version="1.0" encoding="utf-8"?>
<cms.workflowaction>
  <ActionAllowedObjects>;##DOCUMENTS##;</ActionAllowedObjects>
  <ActionAssemblyName>CMS.DocumentEngine</ActionAssemblyName>
  <ActionClass>CMS.DocumentEngine.EmailAction</ActionClass>
  <ActionDescription>
