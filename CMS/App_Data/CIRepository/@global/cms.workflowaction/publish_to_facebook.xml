<?xml version="1.0" encoding="utf-8"?>
<cms.workflowaction>
  <ActionAllowedObjects>;##DOCUMENTS##;</ActionAllowedObjects>
  <ActionAssemblyName>CMS.SocialMarketing</ActionAssemblyName>
  <ActionClass>CMS.SocialMarketing.FacebookAction</ActionClass>
  <ActionDescription>
    <![CDATA[Using this step, you can automatically publish status updates to the Facebook page specified in the site's settings.]]>
  </ActionDescription>
  <ActionDisplayName>Publish to Facebook</ActionDisplayName>
  <ActionEnabled>True</ActionEnabled>
  <ActionGUID>f3204125-ddad-466a-b52f-95d00c7a89c1</ActionGUID>
  <ActionIconClass> icon-brand-facebook </ActionIconClass>
  <ActionName>Publish_to_Facebook</ActionName>
  <ActionParameters>
    <form version="2">
      <field column="Text" columntype="longtext" guid="0222a943-ff70-4929-adbe-a29eb2f44c4c" visible="true">
        <properties>
          <explanationtext>{$sm.facebook.autopost.macrohint$}</explanationtext>
          <fieldcaption>{$general.text$}</fieldcaption>
          <fielddescription>{$wf.action.facebook.text.desc$}</fielddescription>
          <maxvalue>60000</maxvalue>
        </properties>
        <settings>
          <controlname>largetextarea</controlname>
        </settings>
      </field>
      <field allowempty="true" column="URLShortenerType" columntype="integer" guid="d2e24609-55e2-4608-9b90-a6b3c9decb45" visible="true">
        <properties>
          <fieldcaption>{$sm.facebook.posts.urlshortener$}</fieldcaption>
          <fielddescription>{$sm.facebook.posts.urlshortener.description$}</fielddescription>
        </properties>
        <settings>
          <controlname>availableurlshortenerselector</controlname>
          <SocialNetworkName>Facebook</SocialNetworkName>
        </settings>
      </field>
      <field allowempty="true" column="PostOnlyOnce" columntype="boolean" guid="31d358fe-ed3e-4f46-9d9a-bcaad514ec1b" visible="true">
        <properties>
          <defaultvalue>true</defaultvalue>
          <fieldcaption>{$sm.workflow.postonlyonce$}</fieldcaption>
          <fielddescription>{$sm.workflow.postonlyonce.decription$}</fielddescription>
        </properties>
        <settings>
          <controlname>CheckBoxControl</controlname>
        </settings>
      </field>
    </form>
  </ActionParameters>
  <ActionResourceID>
    <CodeName>CMS.SocialMarketing</CodeName>
    <GUID>66fed7e0-3dfc-4367-9350-0ce620cc1d7e</GUID>
    <ObjectType>cms.resource</ObjectType>
  </ActionResourceID>
  <ActionThumbnailClass> icon-brand-facebook </ActionThumbnailClass>
  <ActionWorkflowType>1</ActionWorkflowType>
</cms.workflowaction>