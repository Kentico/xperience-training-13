<?xml version="1.0" encoding="utf-8"?>
<cms.formusercontrol>
  <UserControlCodeName>DepartmentSelector</UserControlCodeName>
  <UserControlDescription>
    <![CDATA[Provides a drop-down list with available E-commerce departments.]]>
  </UserControlDescription>
  <UserControlDisplayName>Department selector</UserControlDisplayName>
  <UserControlFileName>
    <![CDATA[~/CMSModules/ECommerce/FormControls/DepartmentSelector.ascx]]>
  </UserControlFileName>
  <UserControlForBinary>False</UserControlForBinary>
  <UserControlForBoolean>False</UserControlForBoolean>
  <UserControlForDateTime>False</UserControlForDateTime>
  <UserControlForDecimal>False</UserControlForDecimal>
  <UserControlForDocAttachments>False</UserControlForDocAttachments>
  <UserControlForDocRelationships>False</UserControlForDocRelationships>
  <UserControlForFile>False</UserControlForFile>
  <UserControlForGuid>False</UserControlForGuid>
  <UserControlForInteger>True</UserControlForInteger>
  <UserControlForLongText>False</UserControlForLongText>
  <UserControlForText>True</UserControlForText>
  <UserControlGUID>b8194af5-20a3-4df4-88a0-16fe0049f979</UserControlGUID>
  <UserControlIsSystem>False</UserControlIsSystem>
  <UserControlParameters>
    <form version="2">
      <field column="UseDepartmentNameForSelection" columntype="boolean" guid="ec1835c4-613f-4b66-9f8a-55b3f0990a87" visible="true">
        <properties>
          <defaultvalue>true</defaultvalue>
          <fieldcaption>Use department name for selection</fieldcaption>
          <fielddescription>
            <![CDATA[If checked, the selector returns the code name of the selected item, instead of its ID.]]>
          </fielddescription>
        </properties>
        <settings>
          <controlname>checkboxcontrol</controlname>
        </settings>
      </field>
      <field column="AllowCreate" columntype="boolean" guid="7c513e6e-8eae-4c68-a33c-285cfa3e6e8b" visible="true">
        <properties>
          <defaultvalue>false</defaultvalue>
          <fieldcaption>{$com.selector.allowcreatetitle$}</fieldcaption>
          <fielddescription>{$com.selector.allowcreatedescription$}</fielddescription>
        </properties>
        <settings>
          <controlname>checkboxcontrol</controlname>
        </settings>
      </field>
      <field column="EnsureSelectedItem" columntype="boolean" guid="460ecaa8-e685-41bd-aa5f-ed249013403b" visible="true">
        <properties>
          <defaultvalue>false</defaultvalue>
          <fieldcaption>Ensure selected item</fieldcaption>
          <fielddescription>
            <![CDATA[If checked, the selected item is present in the list regardless of other settings.]]>
          </fielddescription>
        </properties>
        <settings>
          <controlname>checkboxcontrol</controlname>
        </settings>
      </field>
      <field column="ShowAllSites" columntype="boolean" guid="8ea4dd86-b617-45a8-b35c-c304ffb0aa31" visible="true">
        <properties>
          <defaultvalue>false</defaultvalue>
          <fieldcaption>Show departments from all sites</fieldcaption>
          <fielddescription>
            <![CDATA[Indicates if departments from all sites are to be included in the list.]]>
          </fielddescription>
        </properties>
        <settings>
          <controlname>checkboxcontrol</controlname>
        </settings>
      </field>
      <field column="AddAllItemsRecord" columntype="boolean" guid="1bf9705b-0c37-48d0-9cc9-4751a754b472" visible="true">
        <properties>
          <defaultvalue>true</defaultvalue>
          <fieldcaption>Add all items record</fieldcaption>
          <fielddescription>
            <![CDATA[Indicates if the (all) option for selecting all departments is to be included in the list.]]>
          </fielddescription>
        </properties>
        <settings>
          <controlname>checkboxcontrol</controlname>
        </settings>
      </field>
      <field column="AddNoneRecord" columntype="boolean" guid="6cb6afd3-2469-46b2-84f4-48ed53b029b5" visible="true">
        <properties>
          <defaultvalue>false</defaultvalue>
          <fieldcaption>Add none record</fieldcaption>
          <fielddescription>
            <![CDATA[Indicates if the (none) option is to be included in the list.]]>
          </fielddescription>
        </properties>
        <settings>
          <controlname>checkboxcontrol</controlname>
        </settings>
      </field>
      <field column="AddAllRecord" columntype="boolean" guid="94cbd141-210e-4235-8940-347fd7e1337e" reftype="Required" resolvedefaultvalue="False" visible="true">
        <properties>
          <defaultvalue>False</defaultvalue>
          <fieldcaption>Add (all) record</fieldcaption>
          <fielddescription>
            <![CDATA[Indicates if the (all) option is to be included in the list.]]>
          </fielddescription>
        </properties>
        <settings>
          <controlname>CheckBoxControl</controlname>
        </settings>
      </field>
      <field column="AddWithoutDepartmentRecord" columntype="boolean" guid="d33bf4c1-bddc-4ff5-877d-7ef6659614d3" visible="true">
        <properties>
          <defaultvalue>false</defaultvalue>
          <fieldcaption>Add (without department) record</fieldcaption>
          <fielddescription>
            <![CDATA[Indicates if the (without department) option is to be included in the list.]]>
          </fielddescription>
        </properties>
        <settings>
          <controlname>checkboxcontrol</controlname>
        </settings>
      </field>
      <field column="ReflectGlobalProductsUse" columntype="boolean" guid="360e2266-7276-4b7f-b858-e446f37b54ff" visible="true">
        <properties>
          <defaultvalue>false</defaultvalue>
          <fieldcaption>Reflect use of global products</fieldcaption>
          <fielddescription>
            <![CDATA[Indicates if global items are to be displayed if global products are used on the site.]]>
          </fielddescription>
        </properties>
        <settings>
          <controlname>checkboxcontrol</controlname>
        </settings>
      </field>
      <field column="DropDownListMode" columntype="boolean" guid="00f23897-718d-46b4-b6e1-70d5657fe0f5" visible="true">
        <properties>
          <defaultvalue>true</defaultvalue>
          <fieldcaption>Drop-down list mode</fieldcaption>
          <fielddescription>
            <![CDATA[Indicates if the departments are to be listed in a drop-down list. Otherwise, a selector is used.]]>
          </fielddescription>
        </properties>
        <settings>
          <controlname>checkboxcontrol</controlname>
        </settings>
      </field>
    </form>
  </UserControlParameters>
  <UserControlPriority>0</UserControlPriority>
  <UserControlResourceID>
