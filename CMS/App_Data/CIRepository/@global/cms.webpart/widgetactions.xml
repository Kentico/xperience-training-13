<?xml version="1.0" encoding="utf-8"?>
<cms.webpart>
  <WebPartCategoryID>
    <CodeName>Widgets</CodeName>
    <GUID>c28ef141-4925-4c4f-a385-1c1b0081041b</GUID>
    <ObjectType>cms.webpartcategory</ObjectType>
  </WebPartCategoryID>
  <WebPartDescription>
    <![CDATA[Displays buttons that allow users to add new widgets to a specific zone or reset widget zones to their default content.]]>
  </WebPartDescription>
  <WebPartDisplayName>Widget actions</WebPartDisplayName>
  <WebPartDocumentation />
  <WebPartFileName>Widgets/WidgetActions.ascx</WebPartFileName>
  <WebPartGUID>bba80339-ca03-428b-99ae-a1ba6fea761e</WebPartGUID>
  <WebPartIconClass>icon-w-widget-actions</WebPartIconClass>
  <WebPartName>WidgetActions</WebPartName>
  <WebPartProperties>
    <form version="2">
      <category name="Widgets">
        <properties>
          <visible>True</visible>
        </properties>
      </category>
      <field allowempty="true" column="WidgetZoneID" columnsize="50" columntype="text" guid="5af99ccb-9cec-41fc-bec1-af87c7817b91" spellcheck="false" visible="true">
        <properties>
          <fieldcaption>Widget zone ID</fieldcaption>
          <fielddescription>
            <![CDATA[Designates the widget zone where new widgets are created when a user clicks the Add button. The zone must be directly specified by its zone id. If empty, the first zone of the specified type is used.]]>
          </fielddescription>
        </properties>
        <settings>
          <AutoCompleteEnableCaching>False</AutoCompleteEnableCaching>
          <AutoCompleteFirstRowSelected>False</AutoCompleteFirstRowSelected>
          <AutoCompleteShowOnlyCurrentWordInCompletionListItem>False</AutoCompleteShowOnlyCurrentWordInCompletionListItem>
          <controlname>textboxcontrol</controlname>
          <FilterMode>False</FilterMode>
          <Trim>False</Trim>
        </settings>
      </field>
      <field column="DisplayAddButton" columntype="boolean" guid="be42b8d5-8c6d-46c7-bcbb-b2e98d188015" spellcheck="false" visible="true">
        <properties>
          <defaultvalue>true</defaultvalue>
          <fieldcaption>Display add widget button</fieldcaption>
          <fielddescription>
            <![CDATA[Indicates if the 'Add widget' button should be displayed. It allows users to insert new widgets into the zone specified in the 'Widget zone ID' property.]]>
          </fielddescription>
        </properties>
        <settings>
          <controlname>checkboxcontrol</controlname>
        </settings>
      </field>
      <field column="DisplayResetButton" columntype="boolean" guid="85fc8cba-6ead-4ae8-b9ce-21d6988fb75f" spellcheck="false" visible="true">
        <properties>
          <defaultvalue>true</defaultvalue>
          <fieldcaption>Display reset button</fieldcaption>
          <fielddescription>
            <![CDATA[Indicates if the 'Reset to default' button should be displayed. It allows users to reset all widget zones of the specified type on the page to their default content.]]>
          </fielddescription>
        </properties>
        <settings>
          <controlname>checkboxcontrol</controlname>
        </settings>
      </field>
      <field allowempty="true" column="AddButtonText" columnsize="50" columntype="text" guid="ecdb4262-5e54-429c-960f-cb391d76aece" spellcheck="false" visible="true">
        <properties>
          <fieldcaption>Add button text</fieldcaption>
          <fielddescription>
            <![CDATA[Sets the text caption of the 'Add widget' button. If left empty, the default text is used.]]>
          </fielddescription>
        </properties>
        <settings>
          <AutoCompleteEnableCaching>False</AutoCompleteEnableCaching>
          <AutoCompleteFirstRowSelected>False</AutoCompleteFirstRowSelected>
          <AutoCompleteShowOnlyCurrentWordInCompletionListItem>False</AutoCompleteShowOnlyCurrentWordInCompletionListItem>
          <controlname>textboxcontrol</controlname>
          <FilterMode>False</FilterMode>
          <Trim>False</Trim>
        </settings>
      </field>
      <field allowempty="true" column="ResetButtonText" columnsize="50" columntype="text" guid="dee40b43-4056-4de6-b662-9e5dcbe07eaa" spellcheck="false" visible="true">
        <properties>
          <fieldcaption>Reset button text</fieldcaption>
          <fielddescription>
            <![CDATA[Sets the text caption of the 'Reset to default' button. If left empty, the default text is used.]]>
          </fielddescription>
        </properties>
        <settings>
          <AutoCompleteEnableCaching>False</AutoCompleteEnableCaching>
          <AutoCompleteFirstRowSelected>False</AutoCompleteFirstRowSelected>
          <AutoCompleteShowOnlyCurrentWordInCompletionListItem>False</AutoCompleteShowOnlyCurrentWordInCompletionListItem>
          <controlname>textboxcontrol</controlname>
          <FilterMode>False</FilterMode>
          <Trim>False</Trim>
        </settings>
      </field>
      <field column="ResetConfirmationRequired" columntype="boolean" guid="07e6b433-ea68-4efd-b2e2-248ce062dddb" spellcheck="false" visible="true">
        <properties>
          <defaultvalue>true</defaultvalue>
          <fieldcaption>Reset confirmation required</fieldcaption>
          <fielddescription>
            <![CDATA[If checked, a confirmation dialog opens when a user clicks the reset button.]]>
          </fielddescription>
        </properties>
        <settings>
          <controlname>checkboxcontrol</controlname>
        </settings>
      </field>
    </form>
  </WebPartProperties>
  <WebPartSkipInsertProperties>False</WebPartSkipInsertProperties>
  <WebPartType>0</WebPartType>
</cms.webpart>