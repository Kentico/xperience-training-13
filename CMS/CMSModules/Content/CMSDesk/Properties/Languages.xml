<?xml version="1.0" encoding="utf-8" ?>
<grid>
  <actions>
    <action name="action" externalsourcename="Action" fonticonclass="icon-plus" fonticonstyle="allow" />
    <action name="translate" externalsourcename="Translate" fonticonclass="icon-translate" />
  </actions>
  <columns>
    <column source="DocumentName" externalsourcename="DocumentName" caption="$general.name$" wrap="false" cssclass="main-column-100" >
      <filter type="text" />
    </column>
    <column source="##ALL##" externalsourcename="DocumentCultureDisplayName" sort="DocumentCultureDisplayName" caption="$general.language$" wrap="false" >
      <filter type="text" source="DocumentCultureDisplayName" />
    </column>
    <column source="TranslationStatus" externalsourcename="TranslationStatus" caption="$general.status$" wrap="false" />
    <column source="DocumentModifiedWhen" externalsourcename="DocumentModifiedWhen" caption="$general.modified$" wrap="false">
      <tooltip source="DocumentModifiedWhen" externalsourcename="DocumentModifiedWhenTooltip" />
    </column>
    <column source="DocumentLastVersionNumber" externalsourcename="DocumentLastVersionNumber" caption="$general.version$" wrap="false" />
    <column source="##ALL##" externalsourcename="#published" caption="$general.published$" wrap="false" />
  </columns>
  <pager>
    <key name="ShowDirectPageControl" value="false" />
  </pager>
</grid>