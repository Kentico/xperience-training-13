<?xml version="1.0" encoding="utf-8" ?>
<grid>
  <actions>
    <action name="select" externalsourcename="select" caption="$dialogs.list.actions.select$" fonticonclass="icon-chevron-right" />
    <action name="view" externalsourcename="view" caption="$dialogs.list.actions.view$" fonticonclass="icon-eye" fonticonstyle="allow" />
    <action name="edit" externalsourcename="editlibraryui" caption="$General.Edit$" fonticonclass="icon-edit" fonticonstyle="allow" />
    <action name="delete" externalsourcename="delete" caption="$General.Delete$" fonticonclass="icon-bin" fonticonstyle="critical" confirmation="$General.ConfirmDelete$" />
  </actions>
  <columns>
    <column source="##ALL##" externalsourcename="libraryupdate" caption="$general.update$" wrap="false" cssclass="unigrid-actions" />
	<column source="##ALL##" externalsourcename="name" caption="$general.name$" cssclass="main-column-100" wrap="false" sort="FileName">
	</column>
	<column source="##ALL##" externalsourcename="filepath" caption="$general.folder$" wrap="false" sort="FilePath">
	</column>
    <column source="##ALL##" externalsourcename="extension" caption="$general.type$" wrap="false" sort="Extension">
    </column>
    <column source="##ALL##" externalsourcename="size" caption="$general.size$" wrap="false" sort="FileSize">
    </column>
    <column source="##ALL##" externalsourcename="modified" caption="$general.modified$" wrap="false" sort="Modified">
    </column>
  </columns>
  <pager>
    <key name="DefaultPageSize" value="10" />
    <key name="PageSizeOptions" value="10,25,50,100,##ALL##" />
  </pager>
  <options>
    <key name="DisplayFilter" value="false" />
    <key name="ShowSelection" value="true" />
  </options>
</grid>
